<!DOCTYPE html>
<html>
  <head>
    <title>Karakatsu</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="header">
      <div class="navbar left-navbar">
      <%= link_to root_path do %>
        <div class="navbar-item">
          <img src="<%= image_path('—Pngtree—music microphone_5421282.png') %>" alt="マイク" width="20" height="20">
          <span class="navbar-title">カラ活</span>
        </div>
      <% end %>
      </div>

      <div class="navbar right-navbar">
        <input type="checkbox" class="hamburger-checkbox" id="hamburger-checkbox">
        <label class="hamburger-label" for="hamburger-checkbox">
          <span class="line"></span>
          <span class="line"></span>
          <span class="line"></span>
        </label>
        <ul class="menu">
          <li><a href="#">Home</a></li>
          <li><a href="#">SIGH UP</a></li>
          <li><a href="#">LOG IN</a></li>
          <li><a href="#">LOG OUT</a></li>
          <li><a href="#">MY PAGE</a></li>
          <li><a href="#">NEW POST</a></li>
          <li><a href="#">LIKE</a></li>
          <li><a href="#">FOLLOW</a></li>
        </ul>
      </div>
    </div>

    <main>
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
    </main>

</body>
</html>